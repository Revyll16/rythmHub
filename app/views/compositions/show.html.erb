<div class="video-page">
  <!-- Main Video Section -->
  <div class="main-video-container">
    <% if @composition.video_url.present? %>
      <iframe width="1280" height="720" src="https://www.youtube.com/embed/N8Ove_3PGN0" title="<%=@composition.title%>" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <%#= video_tag(@composition.video_url, controls: true, class: 'main-video-player') %>
    <% else %>
      <div class="no-video-placeholder">
        <p>No video available for this composition.</p>
      </div>
    <% end %>
    <div class="main-video-info">
      <h1 class="video-title"><%= @composition.title %></h1>
      <p class="video-meta">
        By <%= @composition.musician&.name || "Unknown Musician" %> | <%= time_ago_in_words(@composition.created_at) %> ago
      </p>
    </div>
    <!-- Description Section -->
    <div class="description">
      <h2>Description</h2>
      <p><%= @composition.description %></p>
    </div>
    <!-- Feedback Section -->
    <div class="feedback-section">
      <h2>Feedback</h2>
      <div id="feedbacks">
        <% @feedbacks.each do |feedback| %>
          <%= render "feedbacks/feedback", feedback: feedback %>
        <% end %>
      </div>
      <div>
        <%= simple_form_for [@composition, Feedback.new] do |f| %>
          <%= f.input :content, label: "Your Feedback", as: :text, input_html: { rows: 3 }, class: "w-10" %>
          <%= f.submit "Post Feedback", class: "button" %>
        <% end %>
      </div>
    </div>
  </div>
  <!--Sidebar Section-->
  <div class="sidebar">
    <ul class="composition-videos video-show">
      <% @compositions.each do |composition| %>
        <div class="video-card card-show">
          <div class="video-info">
            <%= link_to video_tag(composition.video_url, controls: true, class: 'video-player'), composition_path(composition)%>
            <p class="video-title"><%= composition.title %></p>
            <% if composition.tutorial %>
              <p class="small-text">TutorialðŸŽ“</p>
            <% else %>
              <p class="small-text">ðŸš«Not A Tutorial</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>

<%= simple_form_for @forum do |f| %>
  <div class="form-group">
    <%= f.input :title, label: "Title" %>
  </div>

  <div class="form-group">
    <%= f.input :image_url, label: "Image URL" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update Forum", class: "btn btn-primary" %>
  </div>
<% end %>

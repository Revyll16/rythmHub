<div class="index-background-container">
  <div class="row justify-content-center">
    <div class="header-container">
      <br>
      <h1 class="animated-header">Musicians from all over the world</h1>
    </div>
    <br>
    <br>
    <div class="cards-container" style="display: flex; flex-wrap: wrap; gap: 16px; justify-content: center;">
      <% @musicians.each do |musician| %>
        <%= link_to musician_path(musician), class: "card m-4", style: "width: 300px; border: 1px solid #ddd; border-radius: 8px; overflow: hidden; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); background-image: url('#{cl_image_path musician.image.key}'); text-decoration: none;" do %>
          <div class="card-image" style="height: 200px; overflow: hidden;">
          </div>
          <div class="details" style="padding: 16px;">
            <div class="cardHeader" style="font-weight: bold; font-size: 1.2em; margin-bottom: 8px;"><%= musician.name %></div>
            <div class="cardText" style="margin-bottom: 12px;">
              <%= truncate(musician.bio, length: 30) %>
            </div>
            <div class="cardAddress" style="font-style: italic; color: #555; margin-bottom: 16px;">
              Address: <%= musician.address %>
            </div>
          </div>
        <% end %>
      <% end %>
      
    </div>
    <!-- FIXED BACKGROUND MAP -->
    <div class="fixed-background-map">
      <div class="fixed-wrap-map">
        <div class="fixed-map">
          <div style="width: 50%; height: 1000px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

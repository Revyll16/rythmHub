<div class="index-background-container">
  <div class="header-container">
    <br>
    <h1 class="animated-header">Musicians</h1>
  </div>
  <br>
  <br>
  <div class="cards-container" style="display: flex; flex-wrap: wrap; gap: 16px; justify-content: center;">
    <% @musicians.each do |musician| %>
      <div class="card m-4" style="width: 300px; border: 1px solid #ddd; border-radius: 8px; overflow: hidden; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); background-image: url('<%= musician.image_url %>');">
        <div class="card-image" style="height: 200px; overflow: hidden;">
        </div>
        <div class="details" style="padding: 16px;">
          <div class="cardHeader" style="font-weight: bold; font-size: 1.2em; margin-bottom: 8px;"><%= musician.name %></div>
          <div class="cardText" style="margin-bottom: 12px;">
            <%= truncate(musician.bio, length: 30) %>
          </div>
          <div class="cardAddress" style="font-style: italic; color: #555; margin-bottom: 16px;">
            Address: <%= musician.address %>
          </div>
          <%= link_to "Show more", musician_path(musician), class: "button", style: "text-decoration: none; color: white; background-color: #007BFF; padding: 8px 16px; border-radius: 4px;" %>
        </div>
      </div>
    <% end %>
  </div>

 <div class="col-12 text-center button-create-musicians">
    <%= link_to "Register as a musician", new_musician_path, class: "button", style: "text-decoration: none; color: white; background-color: #007BFF; padding: 8px 16px; border-radius: 4px; margin-bottom: 50px" %>
  </div>

  <<div class="col-12 text-center button-create-musicians">
  <%= link_to "Register as a musician", new_musician_path, class: "button", style: "text-decoration: none; color: white; background-color: #007BFF; padding: 8px 16px; border-radius: 4px; margin-bottom: 50px" %>
</div>

</div>


